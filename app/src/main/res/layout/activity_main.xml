<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Jetpack"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.01"/>

    <TextView
        android:id="@+id/view_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Model"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/show"
        app:layout_constraintLeft_toLeftOf="@+id/show"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/test_view_model"
        android:text="View Model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_model"
        app:layout_constraintLeft_toLeftOf="@+id/view_model"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>
    <Button
        android:id="@+id/test_view_model_fragment"
        android:text="View Model Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/test_view_model"
        app:layout_constraintLeft_toLeftOf="@+id/test_view_model"
        android:layout_marginTop="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>